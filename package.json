{
  "name": "lol-compare",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "prepare": "husky",
    "start-dev": "concurrently --raw \"cd backend/app && uvicorn main:app --reload --port 8000\" \"cd frontend && bun run dev\""
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx,js,jsx,json,md}": [
      "bunx prettier --write"
    ],
    "backend/**/*.py": [
      "poetry -C backend run ruff format"
    ]
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  }
}
